<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hallway1"
    android:gravity="center"
    tools:context=".GameActivity">

    <SurfaceView
        android:id="@+id/drawSurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/hallway1"
        android:backgroundTint="#00FFFFFF" />

    <TextView
        android:id="@+id/clickCountText"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="75dp"
        android:fontFamily="@font/egyptian"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@color/goldColor"
        android:textSize="50sp" />

    <Button
        android:id="@+id/spinButton"
        style="@style/ElDoradoButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="25dp"
        android:onClick="spinAction"
        android:text="@string/spin_button" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@android:color/transparent"
        android:onClick="stopGame"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cross" />

</FrameLayout>